require ["fileinto", "variables", "envelope", "regex", "mailbox"];

# Extract the local-part (before @) from the recipient address
if address :regex "to" "^([^@]+)@.*$" {

  if string :is "${1}" "erebe" {
    fileinto "INBOX";
  } else {
    set :lower "folder" "INBOX/${1}";
    fileinto :create "${folder}";
    keep;
  }

  stop;
}

